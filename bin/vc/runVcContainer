#!/bin/sh

host=`hostname`
dockerName="rgbussell/vc:latest"
remoteShare="/home/ds/notebooks"

if [ `hostname` = "fmrisaturn.ucsd.edu"  ];then
  localShare=/Users/rbussell/vcproc/
fi

if [ `hostname` = "ip-172-31-3-181"  ];then
  localShare=/Users/rbussell/vcproc/
fi

if [ `hostname` = "fmri1.ucsd.edu"  ];then
  localShare=/rpool/home/rbussell/data/vcproc/
fi

echo running $dockerName
echo local share is $localShare

docker run -d -v $localShare:$remoteShare $dockerName

#docker run -d -p 8888:8888 -v $localShare:/home/ds/notebooks $dockerName
